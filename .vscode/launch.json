    "version": "0.2.0",
    "configurations": [               
        {
            "name": "Launch via NPM",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "dev"
            ],
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeExecutable": "npm",
            "program": "${workspaceRoot}/server.js",
            "cwd": "${workspaceRoot}"
            
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}